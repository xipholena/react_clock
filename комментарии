export class Clock extends React.Component {
  state = { // this.state
    time: new Date().toLocaleTimeString(),
  }

  componentDidMount() {
    // this.stopInterval для других методов
    this.stopInterval = setInterval(() => {
      const date = new Date();

      // eslint-disable-next-line
      console.log(date.toLocaleTimeString());
      this.setState({
        time: new Date().toLocaleTimeString(),
      });
    }, 1000);
  }


