class App extends React.Component {
  state = {
    isClockVisible: true,
    clockName: 0,
  }
  //именно стрелочная, так как берёт this из замыкания
  //this.showClock в методе render()
  showClock = () => {
    this.setState({
      isClockVisible: true,
    })
  }

//поскольку метод жизненного цикла отрабатывает и на родителе, если ребёнок изменился
  componentDidUpdate(prevProp, prevState) {
    console.log(`Clock was renamed from ${prevState.clockName} to ${this.state.clockName}`);
  }

